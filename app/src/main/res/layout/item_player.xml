<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="itemViewModel"
            type="com.theboringdevelopers.smartmurmansk.activity.main.team.teams.TeamItemModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@drawable/bg_circle"
        android:backgroundTint="@color/grey_light">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/avatarIv"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:src="@color/blue"
            android:layout_marginStart="22dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/basketball"
            android:background="@drawable/circle"
            android:backgroundTint="@color/blue_secondary"
            app:layout_constraintEnd_toEndOf="@id/avatarIv"
            app:layout_constraintBottom_toBottomOf="@id/avatarIv"
            android:padding="5dp"/>

        <TextView
            style="@style/Text16sp"
            android:layout_marginStart="22dp"
            android:layout_marginTop="12dp"
            android:text="Антон Ермаков"
            android:fontFamily="@font/manrope_medium"
            app:layout_constraintTop_toTopOf="@id/avatarIv"
            app:layout_constraintStart_toEndOf="@id/avatarIv"/>

        <TextView
            style="@style/Text14sp.Grey"
            android:layout_marginStart="22dp"
            android:layout_marginBottom="12dp"
            android:text="37 лет"
            app:layout_constraintBottom_toBottomOf="@id/avatarIv"
            app:layout_constraintStart_toEndOf="@id/avatarIv"/>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>