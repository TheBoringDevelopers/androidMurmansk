<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="startButtonLogInInst">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/manrope_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@color/select</item>
        <item name="android:textColor">@color/select</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="AppThemeSecond" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimaryDark">@color/select</item>
        <item name="android:textColor">@color/select</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
    </style>

    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="Button" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/selector_button_text</item>
        <item name="android:fontFamily">@font/manrope_regular</item>
        <item name="android:background">@drawable/selector_button</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:stateListAnimator" tools:targetApi="lollipop">@null</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/moresheet_bg</item>
    </style>

    <style name="AppTheme.Launcher">
<!--        <item name="android:windowBackground">@drawable/ic_splashscreen</item>-->
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="TabAppearance">
        <item name="fontFamily">@font/manrope_semibold</item>
        <item name="android:textSize">15sp</item>
    </style>

</resources>